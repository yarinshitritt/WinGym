<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateStats"
    android:orientation="vertical"

    android:background="@drawable/sidesidepic"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/newnblack"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="35dp"
        android:text="Your stats"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/calorieIntakeBtn"

            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bt_square"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Calorie\n Intake"
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:ignore="OnClick" />

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/calculatorsBtn"

            android:layout_width="90dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bt_square"
            android:gravity="center"
            android:onClick="onClick"
            android:text="Calculators "
            android:textColor="@color/black"
            android:textSize="14dp"
            tools:ignore="OnClick" />


    </LinearLayout>
</LinearLayout>